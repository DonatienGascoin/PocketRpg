{
  "name": "new_controller",
  "defaultState": "idle",
  "parameters": [
    {
      "name": "directiontest",
      "type": "direction",
      "default": "DOWN"
    },
    {
      "name": "isMoving",
      "type": "bool",
      "default": false
    }
  ],
  "states": [
    {
      "name": "idle",
      "type": "directional",
      "animations": {
        "UP": "animations/player_idle_up.anim.json",
        "DOWN": "animations/player_idle_down.anim.json",
        "LEFT": "animations/player_idle_left.anim.json",
        "RIGHT": "animations/player_idle_right.anim.json"
      }
    },
    {
      "name": "move",
      "type": "directional",
      "animations": {
        "UP": "animations/player_move_up.anim.json",
        "DOWN": "animations/player_move_down.anim.json",
        "LEFT": "animations/player_move_left.anim.json",
        "RIGHT": "animations/player_move_right.anim.json"
      }
    }
  ],
  "transitions": [
    {
      "from": "idle",
      "to": "move",
      "type": "INSTANT",
      "conditions": [
        {
          "parameter": "isMoving",
          "value": true
        }
      ]
    },
    {
      "from": "move",
      "to": "idle",
      "type": "INSTANT",
      "conditions": [
        {
          "parameter": "isMoving",
          "value": false
        }
      ]
    }
  ]
}